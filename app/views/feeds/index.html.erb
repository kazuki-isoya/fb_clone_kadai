<h1>投稿画像一覧</h1>
<h2>ログイン中のユーザー:<%= current_user.name %></h2>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <% @feeds.each do |feed| %>
        <tr>
          <td><%= feed.image %></td>
          <td>投稿ユーザー:<%= feed.user.name %></td>
          <td>コメント:<%= feed.content %></td>
          <td>
            <button type="button" name="new_toukou" value="">
              <%= link_to '詳細を確認', feed %>
            </button>
          </td>
          <td>
            <button type="button" name="button">
              <%= link_to '画像を変更', edit_feed_path(feed) %>
            </button>
          </td>
          <td>
            <button type="button" name="button">
              <%= link_to '画像を削除', feed, method: :delete, data: { confirm: '投稿を削除しますか？' } %>
            </button>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>

<br>

<div class="toukou_button">
  <button type="button" name="new_toukou" value="">
    <%= link_to '新規投稿', new_feed_path %>
  </button>
</div>
