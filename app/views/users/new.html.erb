<h1>新しいユーザーを作成</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :Eメールアドレス %>
  <%= f.email_field :email %>
  <br>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <br>

  <%= f.label :パスワード（確認用） %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.submit "これでユーザーを作成する" %>
<% end %>
